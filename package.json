{
  "name": "novelmind",
  "version": "0.1.1",
  "description": "AI-powered novel plot analysis and character relationship visualization tool",
  "main": "dist-electron/main.js",
  "author": "NovelMind Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "dev:electron": "vite",
    "dev:backend": "cd backend && uv run python main.py",
    "dev:all": "concurrently \"npm run dev:electron\" \"npm run dev:backend\"",
    "build:backend": "node scripts/build-backend.js",
    "build:ui": "vue-tsc --noEmit && vite build",
    "build:electron-main": "vite build --config vite.config.ts --mode production",
    "build": "npm run build:backend && npm run build:ui && npm run build:electron-main",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "preview": "vite preview",
    "setup": "npm install && cd backend && uv sync",
    "setup:all": "npm run setup",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.7",
    "d3": "^7.8.5",
    "echarts": "^5.5.0",
    "electron-log": "^5.4.3",
    "element-plus": "^2.5.6",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.11.24",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3",
    "sass": "^1.71.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.4",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.6"
  },
  "build": {
    "appId": "com.novelmind.app",
    "productName": "NovelMind",
    "copyright": "Copyright Â© 2024 NovelMind Team",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "resources/icons/**/*"
    ],
    "win": {
      "icon": "resources/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "resources/icons/icon.ico",
      "uninstallerIcon": "resources/icons/icon.ico",
      "installerHeaderIcon": "resources/icons/icon.ico",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "NovelMind",
      "runAfterFinish": true,
      "perMachine": true
    },
    "extraResources": [
      {
        "from": "backend/dist/novelmind",
        "to": "backend/novelmind",
        "filter": [
          "**/*"
        ]
      }
    ],
    "afterPack": "./scripts/afterPack.js",
    "publish": {
      "provider": "github",
      "owner": "rinchao0721",
      "repo": "NovelMind"
    }
  }
}
